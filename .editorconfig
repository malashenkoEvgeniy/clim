# http://EditorConfig.org
root = true
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
end_of_line = crlf
insert_final_new_line = true

[{*.sass, *.js}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

# 2 spaces
[{package.json, package-lock.json, composer.json, composer.lock, *.yml}]
indent_style = space
indent_size = 2

# 4 spaces
[*.php]
indent_style = space
indent_size = 4
